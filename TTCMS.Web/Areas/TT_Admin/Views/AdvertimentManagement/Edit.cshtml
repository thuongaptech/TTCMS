@model TTCMS.Web.Areas.TT_Admin.Models.SlideViewModel
<div id="modal-form" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="blue bigger">@TTCMS.Resources.Resources.AddQCText</h4>
            </div>
            @if (Model != null)
            {
                using (Html.BeginForm("Edit", "AdvertimentManagement", FormMethod.Post, new { @role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                @Html.HiddenFor(m=>m.Id)
                @Html.HiddenFor(m => m.CreateBy)
                @Html.HiddenFor(m => m.DateCreate)
                @Html.HiddenFor(m => m.SlideType)
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 change-password">
                                <div class="space-4"></div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.QCTextName</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "col-xs-12 col-sm-12", @placeholder = TTCMS.Resources.Resources.QCTextName })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.ImageSlide</label>
                                    <div class="col-sm-9">
                                        <div class="input-group">
                                            @Html.TextBoxFor(x => x.ImgURl, new { @class = "form-control", @placeholder = TTCMS.Resources.Resources.ImageSlide })
                                            <span class="input-group-btn">
                                                <a class="btn yellow" onclick="BrowseServer2('ImgURl');">
                                                    <i class="fa fa-upload"></i> Choose..
                                                </a>
                                            </span>
                                        </div>

                                        @Html.ValidationMessageFor(model => model.ImgURl, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="space-4"></div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.UrlSlide</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(x => x.Link, new { @class = "col-xs-12 col-sm-12", @placeholder = TTCMS.Resources.Resources.UrlSlide })
                                        @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.Possition</label>
                                    <div class="col-sm-9">
                                        <label>
                                            @Html.EnumDropDownListFor(x => x.PossitionType, "[ Select possition ]", new { @class = "ace ace-switch ace-switch-4 btn-flat" })
                                            <span class="lbl"></span>
                                            @Html.ValidationMessageFor(model => model.PossitionType, "", new { @class = "text-danger" })
                                        </label>
                                    </div>
                                </div>
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.ActiveText</label>
                                    <div class="col-sm-9">
                                        <label>
                                            @Html.CheckBoxFor(x => x.IsActive, new { @class = "ace ace-switch ace-switch-4 btn-flat" })
                                            <span class="lbl"></span>
                                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                        </label>
                                    </div>
                                </div>
                                <div class="space-4"></div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-sm" data-dismiss="modal">
                            <i class="ace-icon fa fa-times"></i>
                            @TTCMS.Resources.Resources.CancelText
                        </button>

                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="ace-icon fa fa-check"></i>
                            @TTCMS.Resources.Resources.btnCreateSubmit
                        </button>
                    </div>
                }
            }
            else
            {
                @Html.Partial("_AlertInfo", @TTCMS.Resources.Resources.ErrorNoData);
            }
        </div>
    </div>
</div>
<script>
    $.validator.unobtrusive.parse($("form"));
</script>

<!-- PAGE CONTENT ENDS -->
