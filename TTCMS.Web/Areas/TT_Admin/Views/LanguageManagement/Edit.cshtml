@model TTCMS.Web.Areas.TT_Admin.Models.LanguageViewModel
<div id="modal-form" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="blue bigger">@TTCMS.Resources.Resources.CreateLanguageText</h4>
            </div>
            @if (Model != null)
            {
                using (Html.BeginForm("Edit", "LanguageManagement", FormMethod.Post, new { @role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                @Html.HiddenFor(m=>m.IsDeleted)
                @Html.HiddenFor(m => m.CreatedBy)
                @Html.HiddenFor(m => m.CreatedDate)
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 change-password">
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.Key</label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(x => x.Id, new { @class = "col-xs-12 col-sm-12", @placeholder = TTCMS.Resources.Resources.Key })
                                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.LanguageNameText</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "col-xs-12 col-sm-12", @placeholder = TTCMS.Resources.Resources.LanguageNameText })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.Description</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(x => x.Description, new { @class = "col-xs-12 col-sm-12", @placeholder = TTCMS.Resources.Resources.Description })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.StyleCSS</label>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(x => x.Img_Icon, new { @class = "col-xs-12 col-sm-12", @placeholder = TTCMS.Resources.Resources.StyleCSS })
                                        @Html.ValidationMessageFor(model => model.Img_Icon, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.ActiveText</label>
                                    <div class="col-sm-9">
                                        <label>
                                            @Html.CheckBoxFor(x => x.IsActived, new { @class = "ace ace-switch ace-switch-4 btn-flat" })
                                            <span class="lbl"></span>
                                            @Html.ValidationMessageFor(model => model.IsActived, "", new { @class = "text-danger" })
                                        </label>
                                    </div>
                                </div>
                                <div class="space-4"></div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">@TTCMS.Resources.Resources.DefaultText</label>
                                    <div class="col-sm-9">
                                        <label>
                                            @Html.CheckBoxFor(x => x.IsDefault, new { @class = "ace ace-switch ace-switch-4 btn-flat" })
                                            <span class="lbl"></span>
                                            @Html.ValidationMessageFor(model => model.IsDefault, "", new { @class = "text-danger" })
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-sm" data-dismiss="modal">
                            <i class="ace-icon fa fa-times"></i>
                            @TTCMS.Resources.Resources.CancelText
                        </button>

                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="ace-icon fa fa-check"></i>
                            @TTCMS.Resources.Resources.btnCreateSubmit
                        </button>
                    </div>
                }
            }
            else
            {
                @Html.Partial("_AlertInfo", @TTCMS.Resources.Resources.ErrorNoData);
            }
        </div>
    </div>
</div>
<script>
    $.validator.unobtrusive.parse($("form"));
</script>

<!-- PAGE CONTENT ENDS -->
