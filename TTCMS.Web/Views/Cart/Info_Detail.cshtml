@model TTCMS.Web.Areas.TT_Admin.Models.ListDonHangViewModel
@{
    ViewBag.Title = "Chi tiết giỏ hàng";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}
<main class="main-content clearfix" id="main">
    <div class="container">
        <div class="sidebar-content--2">
            @Html.Action("Info_Right", "Account")
            <div class="content">
                <div class="box">
                    <div class="box__header">
                        <h2 class="box__title">THÔNG TIN CHI TIẾT ĐƠN HÀNG</h2>
                        <a class="btn btn--back visible-xs visible-sm" href="/thong-tin-don-hang.html"><i class="fa fa-angle-left"></i></a>
                        <input type="hidden" value="11874737" id="orderId" name="orderId">
                    </div>
                    <div class="box__body">
                        <table class="table table--keyval">
                            <tbody>
                                <tr>
                                    <th>Đơn hàng</th>
                                    <td>#@Model.Id</td>
                                </tr>
                                <tr>
                                    <th>Ngày</th>
                                    <td>@string.Format("{0:dd/MM/yyyy HH:mm:ss}",Model.DateCreate)</td>
                                </tr>
                                <tr>
                                    <th>Trạng thái</th>
                                    <td class="orderStatusText">
                                        @Model.Status.ToDescription()
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <h3 class="box__heading">Tóm tắt</h3>
                        <table class="table table--keyval">
                            <tbody>
                                <tr>
                                    <th>Tổng tiền</th>
                                    <td>@string.Format("{0:#,### đ}",Model.Total)</td>
                                </tr>
                                <tr>
                                    <th>Ghi chú cho bộ phận giao hàng</th>
                                    <td class="orderNotes">
                                        @Model.Note
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <h3 class="box__heading">Thông tin khách hàng</h3>
                        <table class="table table--keyval">
                            <tbody>
                                <tr>
                                    <th>Họ tên</th>
                                    <td>@Model.UserName</td>
                                </tr>
                                <tr>
                                    <th>Số điện thoại</th>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Địa chỉ</th>
                                    <td>@Model.Address</td>
                                </tr>
                            </tbody>
                        </table>

                        <h3 class="box__heading">THÔNG TIN SẢN PHẨM</h3>
                        <table class="table table--listing table--order-details">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th width="15%" align="left">Giá bán</th>
                                    <th width="15%" align="left">Số lượng</th>
                                    <th width="20%" align="right" class="text-right">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListPro)
                                {
                                    <tr>
                                        <td class="name">
                                            <div class="name"><a href="@Url.Action("Detail", "Product", new { Id = item.Id, alias = item.Route }).ToLower()">@item.Name</a></div>
                                        </td>
                                        <td class="price text-left"><span class="visible-xs visible-sm key">Giá bán:</span> @string.Format("{0:#,### đ}",item.GiaBan) </td>
                                        <td class="text-left"><span class="visible-xs visible-sm key">Số lượng:</span> @item.Views</td>
                                        <td class="total text-right"><span class="visible-xs visible-sm key">Thành tiền:</span> @string.Format("{0:#,### đ}",item.GiaBan * item.Views)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

