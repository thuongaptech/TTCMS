<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/ico" href="@ViewBag.Meta.Favicon" />
    <link rel="icon" type="image/ico" href="@ViewBag.Meta.Favicon" />
    <meta http-equiv="content-language" content="vi" />
    <meta name="description" content="@Html.Raw(ViewBag.Meta.Description)" />
    <meta name="keywords" content="@Html.Raw(ViewBag.Meta.Keywords)" />
    <meta name="robots" content="index, follow" />
    <meta name="geo.region" content="VN-SG" />
    <meta name="geo.placename" content="@Html.Raw(ViewBag.Meta.Address)" />
    <meta property="og:site_name" content="@Html.Raw(ViewBag.Meta.ApplicationName)" />
    <meta property="og:title" content="@Html.Raw(ViewBag.Title)" />
    <meta property="og:description" content="@Html.Raw(ViewBag.Meta.Description)" />
    <meta property="og:url" itemprop="url" content='@Request.Url.AbsoluteUri' />
    <meta property="og:image" content="@ViewBag.Meta.Seo_Image" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" itemprop="inLanguage" content="vi_VN" />
    <link rel="canonical" href="@Request.Url.AbsoluteUri" />
    <link rel="image_src" href="@ViewBag.Meta.Seo_Image" />
    <link href="/Content/Default/css/base-2.6.3.min.css" rel="stylesheet" />
    <link href="/Content/Default/css/app-2.8.7.min.css" rel="stylesheet" />
    <link href="/Content/Default/css/style.css" rel="stylesheet" />
</head>

<body class=" page-checkout">
    <div id="ohsnap"></div>
    <div id="hd-container" class="hd-container">
        <a class="toggle-nav visible-xs visible-sm" data-target="#hd-container" data-effect="hd-effect-4">
            <i class="fa fa-bars"></i>
        </a>
        <div class="hd-menu hd-effect-4 visible-xs visible-sm">
            <div class="hd-menu-container">
                @Html.Action("User_Info", "Account")
                @Html.Action("Category_Mobile", "Menu")
                <div class="hotline">
                    <span class="hotline__text">HOTLINE</span>
                    <span class="hotline__number">@ViewBag.Meta.HotLine</span>
                </div>
            </div>
        </div>
        <div class="hd-pusher">
            <div class="hd-content">
                <div class="hd-content-inner">
                    <div id="page-wrapper">
                        <div class="hd-touch-layer"></div>
                        <header id="header" class="header clearfix">
                            <div class="header__main header__main--simple clearfix">
                                <div class="container">
                                    <div class="row">
                                        <a class="toggle-nav visible-xs visible-sm" data-target="#hd-container" data-effect="hd-effect-4"><i class="fa fa-bars"></i></a>
                                        <a class="toggle-search visible-xs visible-sm" data-target="#main-search"><i class="hd hd-search"></i></a>
                                        <div id="logo" class="logo-wrapper col-md-3">
                                            <a href="@Url.Action("Index","Home")">
                                                <img style="margin: 0 auto;" class="hidden-xs hidden-sm logo" src="@ViewBag.Meta.Logo" />
                                                <img style="margin: 0 auto;" class="visible-xs visible-sm logo" src="@ViewBag.Meta.Logo" />
                                            </a>
                                        </div>
                                        <div class="hidden-xs hidden-sm col-md-7 ">
                                            <ol class="progress-steps" style="width:800px;">
                                                <li data-step="1" class="@(ViewBag.Step == "1" ? "is-active" : ViewBag.Step == "2" || ViewBag.Step == "3" ? "is-complete" : "") ">
                                                    <a>Thông Tin Sản Phẩm</a>
                                                </li>
                                                <li data-step="2" class="@(ViewBag.Step == "2" ? "is-active" : ViewBag.Step == "3" ? "is-complete" : "")">
                                                    <a>Thông Tin Giao Hàng</a>
                                                </li>
                                                <li data-step="3" class="@(ViewBag.Step == "3" ? "is-active" : "") progress__last">
                                                    <span>Thanh Toán</span>
                                                </li>
                                            </ol>
                                        </div>
                                        @Html.Action("Login", "Account")
                                    </div>
                                </div>
                            </div>
                        </header>                    
                        @RenderBody()            
                        <footer id="footer" class="footer clearfix">
                            <div class="footer__bottom ">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2 col-xs-12 col-sm-12 hidden-xs hidden-sm">
                                            <a target="_blank" href="@ViewBag.Meta.LinkFooter">
                                                <img class="img-responsive" src="@ViewBag.Meta.FileXML" style="max-width: 165px;" />
                                            </a>
                                        </div>
                                        <div class="col-md-6 col-xs-12 col-sm-12 address-block">
                                            <div class="visible-xs text-center">
                                            </div>
                                            <p>
                                                @Html.Raw(ViewBag.Meta.Strfooter)
                                            </p>
                                        </div>
                                        <div class="col-md-4 col-xs-12 col-sm-12 websites-block">
                                            <div class="fb-page" data-href="https://www.facebook.com/khonggianxinh" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/khonggianxinh" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/khonggianxinh">Trang trí phòng</a></blockquote></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="#top" data-offset="300" class="btn btn-default btn--to-top to-top"><i class="fa fa-arrow-up"></i></a>
    <script src="~/Content/Default/js/base-2.6.3.min.js"></script>
    <script src="~/Content/Default/js/app-2.8.7.min.js"></script>
    <script src="~/Content/js-custom.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <div id="fb-root"></div>
    <script>
(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.6&appId=1374887326069366";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
